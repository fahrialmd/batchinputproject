<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns="sap.m">
    <Dialog
        title="Import Products"
        class="sapUiResponsiveContentPadding"
        beforeOpen=".onBeforeOpen"
        afterClose=".onAfterClose">
        <content>
            <u:FileUploader
                id="uploader"
                fileType="xlsx"
                multiple="false"
                uploadUrl="/odata/v4/AdminService/Upload/Products"
                fileAllowed=".onFileAllowed"
                fileEmpty=".onFileEmpty"
                uploadComplete=".onUploadComplete"
                typeMissmatch=".onTypeMismatch"
                sendXHR="true"
                useMultipart="false"
                placeholder="Choose an EXCEL file..."
                httpRequestMethod="Put" />
        </content>
        <beginButton>
            <Button id="ok" text="OK" press=".onOk" type="Emphasized" enabled="false" />
        </beginButton>
        <endButton>
            <Button id="cancel" text="Cancel" press=".onCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>